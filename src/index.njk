---
layout: base.njk
---

{# --- HERO --- #}
<section id="home" class="hero" data-sb-object-id="src/_data/pageData.json"> {# ID for the section data #}
    <div class="container hero-content">
        <img src="{{ pageData.headshot }}" alt="{{ pageData.footer_section.name }} Headshot" class="headshot" data-sb-field-path="headshot"> {# Make image editable #}
        <div>
            <h1 data-lang-key="heroTitle" data-sb-field-path="hero_section.title_sv">{{ pageData.hero_section.title_sv }}</h1>
            <p class="subtitle" data-lang-key="heroSubtitle" data-sb-field-path="hero_section.subtitle_sv">{{ pageData.hero_section.subtitle_sv }}</p>
            <div class="hero-buttons">
                 {# Making button text editable #}
                 <a href="#contact" class="button" data-lang-key="heroContactBtn" data-sb-field-path="hero_section.contact_btn_sv">{{ pageData.hero_section.contact_btn_sv }}</a>
                 {# Making button text and href (CV file) editable #}
                 <a href="{{ pageData.cv_sv }}" target="_blank" rel="noopener noreferrer" class="button secondary" data-lang-key="heroCvBtn" id="cv-download-link" data-sb-field-path="hero_section.cv_btn_sv" data-sb-object-id="src/_data/pageData.json" data-sb-field-path-href="cv_sv">{{ pageData.hero_section.cv_btn_sv }}</a>
                 {# Note: data-sb-field-path-href might be needed for hrefs, check Stackbit docs if regular field-path doesn't work for the link #}
            </div>
        </div>
    </div>
</section>

{# --- ABOUT --- #}
<section id="about" class="about section-padding" data-sb-object-id="src/_data/pageData.json"> {# ID for the section data #}
    <div class="container">
        <h2 data-lang-key="aboutTitle" data-sb-field-path="about_section.title_sv">{{ pageData.about_section.title_sv }}</h2>
        <p data-lang-key="aboutText1" data-sb-field-path="about_section.text1_sv">{{ pageData.about_section.text1_sv }}</p>
        <p data-lang-key="aboutText2" data-sb-field-path="about_section.text2_sv">{{ pageData.about_section.text2_sv }}</p>
        <h3 data-lang-key="skillsTitle" data-sb-field-path="about_section.skills_title_sv">{{ pageData.about_section.skills_title_sv }}</h3>
        {# Add field path for the list itself if you want to add/remove/reorder items #}
        <ul class="skills" data-sb-field-path="about_section.skills">
            {% for item in pageData.about_section.skills %}
            {# Need object ID for EACH item in the list #}
            {# Using the list field path + index as a convention #}
            <li data-lang-key="skill_{{ loop.index }}" data-sb-object-id="src/_data/pageData.json#about_section.skills[{{ loop.index0 }}]" data-sb-field-path=".skill_sv">
                {{ item.skill_sv }}
            </li>
            {# Note: the field path starts with '.' because it's relative to the item's object ID #}
            {% endfor %}
        </ul>
    </div>
</section>

{# --- EXPERIENCE --- #}
<section id="experience" class="experience section-padding alt-bg" data-sb-object-id="src/_data/pageData.json"> {# ID for the section data #}
    <div class="container">
        <h2 data-lang-key="experienceTitle" data-sb-field-path="experience_section.title_sv">{{ pageData.experience_section.title_sv }}</h2>
        {# Add field path for the list itself #}
        <div class="timeline" data-sb-field-path="experience_section.jobs">
            {% for job in pageData.experience_section.jobs %}
            {# Add object ID for EACH job item #}
            <div class="timeline-item card" data-sb-object-id="src/_data/pageData.json#experience_section.jobs[{{ loop.index0 }}]">
                <h3 data-lang-key="exp{{ loop.index }}Title" data-sb-field-path=".title_sv">{{ job.title_sv }}</h3>
                <p class="company" data-sb-field-path=".company">{{ job.company }}</p>
                <p class="dates" data-lang-key="exp{{ loop.index }}Dates" data-sb-field-path=".dates_sv">{{ job.dates_sv }}</p>
                {# Add field path for the description list itself #}
                <ul data-lang-key="exp{{ loop.index }}Desc" data-sb-field-path=".desc_sv">
                    {% for desc_item in job.desc_sv %}
                     {# Add field path for each simple string item in the list #}
                     {# Object ID refers to the parent job item #}
                    <li data-sb-field-path=".desc_sv[{{ loop.index0 }}]">{{ desc_item }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# --- EDUCATION --- #}
<section id="education" class="education section-padding" data-sb-object-id="src/_data/pageData.json"> {# ID for the section data #}
    <div class="container">
        <h2 data-lang-key="educationTitle" data-sb-field-path="education_section.title_sv">{{ pageData.education_section.title_sv }}</h2>
        {# Add field path for the list itself #}
        <div class="timeline" data-sb-field-path="education_section.educations">
            {% for edu in pageData.education_section.educations %}
             {# Add object ID for EACH education item #}
             <div class="timeline-item card" data-sb-object-id="src/_data/pageData.json#education_section.educations[{{ loop.index0 }}]">
                <h3 data-lang-key="edu{{ loop.index }}Title" data-sb-field-path=".title_sv">{{ edu.title_sv }}</h3>
                <p class="institution" data-sb-field-path=".institution">{{ edu.institution }}</p>
                <p class="dates" data-lang-key="edu{{ loop.index }}Dates" data-sb-field-path=".dates_sv">{{ edu.dates_sv }}</p>
                {% if edu.details_sv %}
                <p class="details" data-lang-key="edu{{ loop.index }}Details" data-sb-field-path=".details_sv">{{ edu.details_sv }}</p>
                {% endif %}
            </div>
            {% endfor %}
        </div>
         <h3 data-lang-key="languagesTitle" data-sb-field-path="education_section.lang_title_sv">{{ pageData.education_section.lang_title_sv }}</h3>
         {# Add field path for the list itself #}
         <div class="language-info" data-sb-field-path="education_section.languages">
            {% for lang in pageData.education_section.languages %}
             {# Add object ID for EACH language item #}
             <p data-sb-object-id="src/_data/pageData.json#education_section.languages[{{ loop.index0 }}]">
                 <strong data-lang-key="lang{{ loop.index }}Name" data-sb-field-path=".name_sv">{{ lang.name_sv }}:</strong>
                 <span data-lang-key="lang{{ loop.index }}Level" data-sb-field-path=".level_sv">{{ lang.level_sv }}</span>
             </p>
            {% endfor %}
         </div>
    </div>
</section>

{# --- CONTACT --- #}
<section id="contact" class="contact section-padding alt-bg" data-sb-object-id="src/_data/pageData.json"> {# ID for the section data #}
    <div class="container">
        <h2 data-lang-key="contactTitle" data-sb-field-path="contact_section.title_sv">{{ pageData.contact_section.title_sv }}</h2>
        <p class="contact-intro" data-lang-key="contactIntro" data-sb-field-path="contact_section.intro_sv">{{ pageData.contact_section.intro_sv }}</p>
        <div class="contact-info">
            <p><strong data-lang-key="contactEmailLabel" data-sb-field-path="contact_section.email_label_sv">{{ pageData.contact_section.email_label_sv }}</strong> <a href="mailto:{{ pageData.contact_section.email_address }}" data-sb-field-path="contact_section.email_address">{{ pageData.contact_section.email_address }}</a></p>
            <p><strong data-lang-key="contactPhoneLabel" data-sb-field-path="contact_section.phone_label_sv">{{ pageData.contact_section.phone_label_sv }}</strong> <a href="tel:{{ pageData.contact_section.phone_number | replace(' ', '') }}" data-sb-field-path="contact_section.phone_number">{{ pageData.contact_section.phone_number }}</a></p>
            <p><strong data-lang-key="contactLinkedInLabel" data-sb-field-path="contact_section.linkedin_label_sv">{{ pageData.contact_section.linkedin_label_sv }}</strong> <a href="{{ pageData.contact_section.linkedin_url }}" target="_blank" rel="noopener noreferrer" data-lang-key="contactLinkedInLinkText" data-sb-field-path="contact_section.linkedin_link_text_sv" data-sb-object-id="src/_data/pageData.json" data-sb-field-path-href="contact_section.linkedin_url">{{ pageData.contact_section.linkedin_link_text_sv }}</a></p>
             <p><strong data-lang-key="contactLocationLabel" data-sb-field-path="contact_section.location_label_sv">{{ pageData.contact_section.location_label_sv }}</strong> <span data-lang-key="contactLocationText" data-sb-field-path="contact_section.location_text_sv">{{ pageData.contact_section.location_text_sv }}</span></p>
        </div>
    </div>
</section>